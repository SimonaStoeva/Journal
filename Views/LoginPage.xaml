<Page x:Class="Journal.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login"
      FontFamily="Segoe UI" Background="#FFEFD5">

    <Page.Resources>
        <DropShadowEffect x:Key="DropShadow" Color="Black" Direction="270"
                          ShadowDepth="5" Opacity="0.2" BlurRadius="10"/>

        <Style x:Key="WarmButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFDAB9"/>
            <Setter Property="Foreground" Value="#5A2E0C"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFCBA4"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1024" Height="768">
            <Grid Margin="20">
                <Border Background="White" CornerRadius="12" Padding="30"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        Width="600"
                        Effect="{StaticResource DropShadow}">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Log into your account" 
                                       FontSize="22" FontWeight="Bold" Foreground="#5A2E0C"
                                       HorizontalAlignment="Center" VerticalAlignment="Top"/>

                            <Button Grid.Column="1" Content="Register"
                                    Cursor="Hand" Click="RegisterClick"
                                    Background="Transparent" BorderThickness="0" Padding="6,2"
                                    VerticalAlignment="Top" HorizontalAlignment="Right">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <TextBlock TextDecorations="Underline"
                                                   FontSize="14"
                                                   Foreground="#5A2E0C"
                                                   FontWeight="SemiBold">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </TextBlock>
                                    </ControlTemplate>
                                </Button.Template>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#B22222"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <Border Grid.Row="1" Background="#FFF5E1" Padding="20" CornerRadius="10" Margin="0,20,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                           Margin="10,0,10,10" FontSize="13" Foreground="DarkRed"
                                           FontWeight="SemiBold" Visibility="Collapsed" 
                                           TextWrapping="Wrap" Name="ErrorMessageTextBlock" 
                                           Text="" VerticalAlignment="Top"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Margin="10" 
                                           VerticalAlignment="Center" Text="User name:" 
                                           FontWeight="SemiBold" Foreground="#5A2E0C"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Margin="10" 
                                         Name="textBoxUserName" Height="30" FontSize="14"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Margin="10" 
                                           VerticalAlignment="Center" Text="Password:" 
                                           FontWeight="SemiBold" Foreground="#5A2E0C"/>
                                <PasswordBox Grid.Row="2" Grid.Column="1" Margin="10" 
                                             Name="passwordBox1" Height="30" FontSize="14"/>

                                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                            Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                    <Button Style="{StaticResource WarmButtonStyle}" 
                                            Content="Login" Click="LoginClick"/>
                                </StackPanel>

                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Viewbox>
</Page>